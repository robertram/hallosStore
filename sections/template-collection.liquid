<div class="my-4 mx-2">
  {% paginate collection.products by section.settings.items_per_page %}
    <h1 class="text-2xl font-bold">{{ collection.title }}</h1>

    <div class="max-w-7xl ">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for product in collection.products %}
          {% render 'product-card', product_product: product %}
        {% else %}
          <p>no matches</p>
        {% endfor %}
      </div>
    </div>

    {% if paginate.pages > 1 %}
      {{ paginate | default_pagination }}
    {% endif %}
  {% endpaginate %}
</div>


{% schema %}
{
  "name": "Template Collection",
  "settings": [],
  "blocks": [
    {
      "type": "items_per_page",
      "name": "Items per page",
      "limit": 1
    }
  ],
  "presets": [
    {
      "name": "Template Collection"
    }
  ]
}
{% endschema %}